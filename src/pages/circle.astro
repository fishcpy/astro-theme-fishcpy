---
import { getEntry, render } from "astro:content";
import Comment from "@components/comment/index.astro";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const circlePost = await getEntry("spec", "circle");

if (!circlePost) {
	throw new Error("Circle page content not found");
}

const { Content } = await render(circlePost);

// 为评论区创建一个模拟的post对象
const mockPost = {
	slug: "circle",
	data: {
		title: i18n(I18nKey.friendsCircle),
	},
};
---

<MainGridLayout title={i18n(I18nKey.circle)} description={i18n(I18nKey.circle)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>

    <Comment path="/circle/" />
</MainGridLayout>